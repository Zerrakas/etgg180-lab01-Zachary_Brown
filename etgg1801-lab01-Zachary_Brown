firstName = "Zachary"
lastName = "Brown"
opposite = 6.9
adjacent = 7

txt = f"Lab01 created by: {firstName} {lastName}"
print(txt)

print(firstName, end=' ')
print(lastName)

from math import sqrt

hypotenuse = sqrt(opposite * opposite + adjacent * adjacent)
print(f"The hypotenuse length is {hypotenuse} if the other sides are {opposite} and {adjacent}.")
input("Press Enter to continue...")

print('Welcome to the Hypotenuse Calculator!')

userName = input("Please enter your name: ")
print("Hello " + userName + "!")
side_a = float(input("Please enter the length of 'side a' on your triangle: "))
side_b = float(input("Please enter the length of 'side b' on your triangle: "))
print(f"Thank you, {userName}!")
input("Press Enter to continue...")
side_c = sqrt(side_a * side_a + side_b * side_b)
print(f"The hypotenuse length is {side_c} if the other sides are {side_a} and {side_b}.")
print("Thank you for using the Hypotenuse Calculator!")
input("Press Enter to end")
